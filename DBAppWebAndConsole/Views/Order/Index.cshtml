@model IEnumerable<Order>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список заказов</title>
</head>
<body>
    <h1>Список заказов</h1>

    <!-- Кнопка для перехода на страницу создания нового заказа -->
    <form action="@Url.Action("Create", "Orders")" method="get">
        <button type="submit">Создать новый заказ</button>
    </form>
    <br /><br />

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Мастер</th>
                <th>Дата</th>
                <th>Комментарий</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.IdOrder</td>
                    <td>@order.Master.Person.Name</td>
                    <td>@order.OrderDate</td>
                    <td>@order.Comment</td>
                    <td>
                        <a href="@Url.Action("Details", "Orders", new { id = order.IdOrder })">Детали</a> |
                        <a href="@Url.Action("Edit", "Orders", new { id = order.IdOrder })">Редактировать</a> |
                        <a href="@Url.Action("Delete", "Orders", new { id = order.IdOrder })">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
