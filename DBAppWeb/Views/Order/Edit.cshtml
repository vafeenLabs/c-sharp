@model Order

<h2>Edit Order</h2>

<form asp-action="Edit" method="post">
    <div class="form-group mb-3">
        <label for="SpareParts" class="form-label">Select Spare Parts</label>
        <select asp-for="SelectedSpareParts" asp-items="@(new SelectList(ViewBag.SpareParts, "IdSparePart", "Name"))" multiple="multiple" class="form-select">
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="Works" class="form-label">Select Works</label>
        <select asp-for="SelectedWorks" asp-items="@(new SelectList(ViewBag.Works, "IdWork", "WorkDescription"))" multiple="multiple" class="form-select">
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="Malfunctions" class="form-label">Select Malfunctions</label>
        <select asp-for="SelectedMalfunctions" asp-items="@(new SelectList(ViewBag.Malfunctions, "IdMalfunction", "Description"))" multiple="multiple" class="form-select">
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="Masters" class="form-label">Select Master</label>
        <select asp-for="MasterId" asp-items="@(new SelectList(ViewBag.Masters, "IdMaster", "Name"))" class="form-select">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-secondary ms-2" href="@Url.Action("Index", "Order")" role="button">Cancel</a>
</form>
