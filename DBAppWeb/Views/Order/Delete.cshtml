@model Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order ID: @Model.IdOrder</h4>
</div>

<form method="post">
    <!-- Кнопка удаления -->
    <button type="submit" class="btn btn-danger me-2">Delete</button>

    <!-- Кнопка отмены -->
    <a class="btn btn-secondary" href="@Url.Action("Index", "Order")" role="button">Cancel</a>
</form>
