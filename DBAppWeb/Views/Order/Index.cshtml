@model IEnumerable<Order>

<h2>Orders list</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID Заказа</th>
            <th>Комментарий</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.IdOrder</td>
                <td>@order.Comment</td>
                <td>
                    <a class="btn btn-primary me-2" href="@Url.Action("Edit", "Order", new { id = order.IdOrder })"
                        role="button">
                        Edit
                    </a>

                    <a class="btn btn-danger me-2" href="@Url.Action("Delete", "Order", new { id = order.IdOrder })"
                        role="button">
                        Delete
                    </a>

                    <a class="btn btn-info" href="@Url.Action("Details", "Order", new { id = order.IdOrder })"
                        role="button">
                        View details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Кнопка создания нового заказа -->
<a class="btn btn-success mt-3" href="@Url.Action("Create", "Order")" role="button">
    Create new order
</a>
